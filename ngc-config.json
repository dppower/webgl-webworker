{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "es2015", "dom" ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./build-aot"
    },
  "files": [
      "./app/main.ts"
  ],
  "angularCompilerOptions": {
   "skipMetadataEmit": true
 }
}
